{
  "name": "digital-waste-tracking-fe-uat",
  "version": "0.0.0",
  "type": "module",
  "description": "",
  "engines": {
    "node": ">=22.13.1"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "aliases": {
    "~": ".",
    "page-objects": "test/page-objects",
    "components": "test/components"
  },
  "scripts": {
    "clean": "rm -rf allure-results && rm -rf allure-report",
    "test": "npm run clean && npm run test:${PROFILE:-integration}",
    "test:debug": "npm run clean && DEBUG=true wdio run wdio.conf.js --cucumberOpts.tags='@debug'",
    "test:integration": "npm run clean && wdio run wdio.conf.js",
    "test:browserstack": ". ./env.sh && npm run clean && wdio run wdio.browserstack.conf.js",
    "test:local": ". ./env.sh && npm run clean && wdio run wdio.local.conf.js",
    "test:local:debug": ". ./env.sh && npm run clean && DEBUG=true wdio run wdio.local.conf.js",
    "test:github": "npm run clean && wdio run wdio.github.conf.js",
    "test:github:browserstack": "npm run clean && wdio run wdio.github.browserstack.conf.js",
    "format": "prettier --write 'test/**/*.js' '**/*.{js,md,json,config.js}'",
    "format:check": "prettier --check 'test/**/*.js' '**/*.{js,md,json,config.js}'",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npm run setup:husky",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "report:generate:allure": "allure generate allure-results --single-file --clean",
    "report:add:accessibility": "node -e \"import('./allure-accessibility-plugin/allure-accessibility-integration.js').then(m => m.integrateAccessibilityWithAllure())\"",
    "report:generate": "npm run report:generate:allure && npm run report:add:accessibility",
    "report:clean": "rm -rf allure-results && rm -rf allure-report && rm -rf reports",
    "report:open": "open ./allure-report/index.html",
    "report:publish": "npm run report:generate; ./bin/publish-tests.sh",
    "source:clean:test:report": ". ./env.sh && npm run report:clean && npm run test ; npm run report:generate && npm run report:open",
    "mongodb:run": "node test/utils/mongodb-client.js"
  },
  "dependencies": {
    "@axe-core/webdriverio": "4.11.1",
    "@wdio/allure-reporter": "9.24.0",
    "@wdio/browserstack-service": "9.24.0",
    "@wdio/cli": "9.24.0",
    "@wdio/cucumber-framework": "9.24.0",
    "@wdio/globals": "9.23.0",
    "@wdio/junit-reporter": "9.24.0",
    "@wdio/local-runner": "9.24.0",
    "@wdio/mocha-framework": "9.24.0",
    "@wdio/shared-store-service": "9.21.0",
    "@wdio/spec-reporter": "9.24.0",
    "allure-commandline": "2.36.0",
    "esm-module-alias": "2.2.1",
    "global-agent": "4.1.2",
    "mongodb": "^6.12.0",
    "undici": "7.22.0",
    "socks": "^2.8.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-wdio": "8.24.12",
    "husky": "9.1.7",
    "prettier": "3.4.2"
  },
  "overrides": {
    "eslint": {
      "@eslint/config-array": "0.23.1",
      "@eslint/eslintrc": "3.3.3"
    },
    "@eslint/eslintrc": {
      "minimatch": "10.2.2"
    },
    "@wdio/cli": {
      "minimatch": "10.2.2"
    },
    "filelist": {
      "minimatch": "10.2.2"
    },
    "glob": {
      "minimatch": "10.2.2"
    },
    "mocha": {
      "minimatch": "10.2.2"
    },
    "@wdio/browserstack-service": {
      "minimatch": "10.2.2"
    },
    "@cucumber/cucumber": {
      "tmp": "0.2.5"
    },
    "readdir-glob": {
      "minimatch": "10.2.2"
    },
    "eslint-plugin-import": {
      "eslint": "^8.57.0",
      "minimatch": "10.2.2"
    },
    "eslint-config-standard": {
      "eslint": "^8.57.0",
      "minimatch": "10.2.2"
    },
    "@humanwhocodes/config-array": {
      "minimatch": "10.2.2"
    }
  }
}
